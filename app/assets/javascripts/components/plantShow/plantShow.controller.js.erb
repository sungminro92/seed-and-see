angular
  .module('seedAndSee')
  .controller('PlantShowController', PlantShowController);

PlantShowController.$inject = ['$stateParams','plantsService'];

function PlantShowController($stateParams, plantsService) {
  var vm = this;

  // NUTRITION FACTS
  vm.facts = [];
  vm.serachPlant = {};

  // SEARCH TERM DEFINED
  vm.plantName = $stateParams.id

  activate();

  function activate() {
    plantsService
      .plantShow(vm.plantName)
      .then(function(res) {
        console.log(res);
        vm.facts = res.data.hits;
      });
  }
}
