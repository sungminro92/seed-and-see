<style>
.col-sm-9 input {
  width: 500px;
}
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div id="legend">
    <legend class="">Register</legend>
  </div>
  <div class="form-group">
        <%= f.label :name, :class=>"control-label col-sm-3" %>
        <div class="col-md-8 col-sm-9">
          <%= f.text_field :name, autofocus: true%>
        </div>
  </div>

  <div class="form-group">
      <%= f.label :email, :class=>"control-label col-sm-3"%>
      <div class="col-md-8 col-sm-9">
        <%= f.email_field :email, autofocus: true%>
      </div>
  </div>

    <div class="form-group">
      <%= f.label :password, :class=>"control-label col-sm-3"%>
      <div class="col-md-8 col-sm-9">
        <%= f.password_field :password, autocomplete: "off" , :class=>"input-xlarge" %>
        <small>
          <% if @minimum_password_length %>
            <p style="display: block"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
          <% end %>
        </small>
        
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, :class=>"control-label col-sm-3"%>
      <div class="col-md-8 col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off" , :class=>"input-xlarge" %>
        </div>
    </div>

    <div class="form-group ">
      <div class="col-xs-offset-3 col-xs-10">
        <%= f.submit "Sign up", :class => "btn btn-success"%>
        </div>
    </div>


<% end %>

<%= render "devise/shared/links" %>

